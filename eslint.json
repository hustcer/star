{
    "env": {
        "es6"  : true,
        "node" : true
    },
    "globals": {
        "star" : true
    },
    "rules": {
        "semi": 1,
        "curly": 0,
        "eqeqeq": 1,
        "camelcase": 1,
        "new-parens": 1,
        "key-spacing": 0,
        "dot-notation": 0,
        "comma-dangle": 2,
        "comma-spacing": 0,
        "no-unused-vars": 1,
        "no-path-concat": 1,
        "space-infix-ops": 0,
        "no-multi-spaces": 0,
        "no-mixed-requires": 1,
        "no-space-before-semi": 0,
        "no-underscore-dangle": 0,
        "quotes": [0, "single", "avoid-escape"]
    }
}
